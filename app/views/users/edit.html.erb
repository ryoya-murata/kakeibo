<h1>会員情報更新</h1>
<%= form_with(model: @user, method: "patch", local: true) do |f| %>

    <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.text_field :email, class: "form-control" %>
    </div>
   
   <%= f.submit "更新", class: "btn btn-primary" %>

<% end %>